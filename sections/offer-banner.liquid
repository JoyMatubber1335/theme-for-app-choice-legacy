{{ "offer-banner.css" | asset_url | stylesheet_tag }}

<style>
  .offer-banner-{{ section.id }} {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    position: relative;
  }

  @media screen and (min-width: 750px) {
    .offer-banner-{{ section.id }} {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
  
  .offer-banner-{{ section.id }} .swiper-slide {
    position: relative;
    transition: transform 0.3s ease;
    border-radius: {{ section.settings.slide_border_radius }}px;
    height: {{ section.settings.banner_height_mobile }}px;
  }

  @media screen and (min-width: 768px) {
    .offer-banner-{{ section.id }} .swiper-slide {
      height: {{ section.settings.banner_height_desktop }}px;
    }
  }

  @media screen and (min-width: 769px) {
    .offer-banner .slide-image-desktop {
      display: block;
    }

    .offer-banner .slide-image-mobile {
      display: none;
    }
  }

  @media (max-width: 768px) {
    .offer-banner-{{ section.id }} .swiper-slide {
      border-radius: 0;
    }
  }

  {% unless section.settings.show_navigation %}
    .offer-banner-{{ section.id }} .slideshow-nav-button-prev,
    .offer-banner-{{ section.id }} .slideshow-nav-button-next {
      display: none !important;
    }
  {% endunless %}
</style>

<slideshow-component
  class="offer-banner offer-banner-{{ section.id }}"
  data-autoplay="{{ section.settings.enable_autoplay }}"
  data-autoplay-delay="{{ section.settings.autoplay_delay | times: 1000 }}"
  data-pause-on-hover="{{ section.settings.pause_on_hover }}"
  data-single-slide-view="true"
>
  <div class="slideshow-container">
    <div class="swiper-container">
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
          <div class="swiper-slide {% unless block.settings.mobile_image %}slide-no-mobile-image{% endunless %}" 
               {{ block.shopify_attributes }}
               data-block-id="{{ block.id }}"
               data-block-type="{{ block.type }}">
            
            {% comment %} Desktop Image {% endcomment %}
            {% if block.settings.image != blank %}
              {% if block.settings.link != blank %}
                <a href="{{ block.settings.link }}"{% if block.settings.link_target %} target="_blank" rel="noopener"{% endif %}>
              {% endif %}
              {{ block.settings.image | image_url: width: 1400 | image_tag: alt: block.settings.image.alt, class: 'slide-image slide-image-desktop' }}
              {% if block.settings.link != blank %}</a>{% endif %}
            {% else %}
             {% assign image_number = forloop.index0 | modulo: 2 | plus: 1 %}
             {{ "lifestyle-" | append: image_number | placeholder_svg_tag: "placeholder-svg slide-image-desktop" }}
            {% endif %}
            
            {% comment %} Mobile Image {% endcomment %}
            {% if block.settings.mobile_image != blank %}
              {% if block.settings.link != blank %}
                <a href="{{ block.settings.link }}"{% if block.settings.link_target %} target="_blank" rel="noopener"{% endif %}>
              {% endif %}
              {{ block.settings.mobile_image | image_url: width: 800 | image_tag: alt: block.settings.mobile_image.alt, class: 'slide-image slide-image-mobile' }}
              {% if block.settings.link != blank %}</a>{% endif %}
            {% elsif block.settings.image != blank %}
              {% if block.settings.link != blank %}
                <a href="{{ block.settings.link }}"{% if block.settings.link_target %} target="_blank" rel="noopener"{% endif %}>
              {% endif %}
              {{ block.settings.image | image_url: width: 800 | image_tag: alt: block.settings.image.alt, class: 'slide-image slide-image-mobile' }}
              {% if block.settings.link != blank %}</a>{% endif %}
            {% else %}
              {{ "lifestyle-1" | placeholder_svg_tag: "placeholder-svg slide-image-mobile" }}
            {% endif %}
          </div>
        {% endfor %}
      </div>
    </div>

    {% if section.settings.show_navigation %}
      {% render "nav-button", cls: "slideshow-nav-button-prev", icon_cls: "icon-arrow-left" %}
      {% render "nav-button", cls: "slideshow-nav-button-next" %}
    {% endif %}
  </div>
</slideshow-component>

<script src="{{ 'slideshow.js' | asset_url }}" defer="defer"></script>

{% schema %}
{
  "name": "Offer Banner",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "header",
      "content": "Banner Height Settings"
    },
    {
      "type": "select",
      "id": "banner_height_desktop",
      "label": "Desktop banner height",
      "default": "508",
      "info": "Height of banner on desktop devices",
      "options": [
        {
          "value": "225",
          "label": "Small (225px)"
        },
        {
          "value": "400",
          "label": "Medium (400px)"
        },
        {
          "value": "508",
          "label": "Large (508px)"
        }
      ]
    },
    {
      "type": "select",
      "id": "banner_height_mobile",
      "label": "Mobile banner height",
      "default": "164",
      "info": "Height of banner on mobile devices",
      "options": [
        {
          "value": "150",
          "label": "Small (150px)"
        },
        {
          "value": "164",
          "label": "Medium (164px)"
        },
        {
          "value": "180",
          "label": "Large (180px)"
        }
      ]
    },
    {
      "type": "header",
      "content": "Visual Settings"
    },
    {
      "type": "range",
      "id": "slide_border_radius",
      "min": 0,
      "max": 20,
      "step": 1,
      "unit": "px",
      "label": "Desktop border radius",
      "default": 0,
      "info": "Rounded corners for desktop view (mobile is always 0)"
    },
    {
      "type": "checkbox",
      "id": "show_navigation",
      "label": "Show navigation arrows",
      "default": true,
      "info": "Display left/right arrow buttons"
    },
    {
      "type": "header",
      "content": "Autoplay Settings"
    },
    {
      "type": "checkbox",
      "id": "enable_autoplay",
      "label": "Enable autoplay",
      "default": false,
      "info": "Automatically advance slides"
    },
    {
      "type": "range",
      "id": "autoplay_delay",
      "min": 2,
      "max": 10,
      "step": 0.5,
      "unit": "s",
      "label": "Autoplay delay",
      "default": 5,
      "info": "Time between slide transitions"
    },
    {
      "type": "checkbox",
      "id": "pause_on_hover",
      "label": "Pause autoplay on hover",
      "default": true,
      "info": "Pause slideshow when mouse hovers over it"
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 0
    }
  ],
  "blocks": [
    {
      "type": "banner",
      "name": "Banner Image",
      "limit": 8,
      "settings": [
        {
          "type": "header",
          "content": "Banner Images"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Desktop Banner Image",
          "info": "Recommended size: 1400x400px or larger"
        },
        {
          "type": "image_picker",
          "id": "mobile_image",
          "label": "Mobile Banner Image (Optional)",
          "info": "Recommended size: 800x250px. If not provided, desktop image will be used."
        },
        {
          "type": "header",
          "content": "Link Settings"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Banner Link (Optional)",
          "info": "Makes the entire banner clickable"
        },
        {
          "type": "checkbox",
          "id": "link_target",
          "label": "Open link in new tab",
          "default": false
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Offer Banner",
      "blocks": [
        {
          "type": "banner",
          "settings": {
          }
        }
      ]
    }
  ]
}
{% endschema %}
<style>
  .social-icons {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    list-style: none;
    gap: 16px;
    padding: 0;
    margin: 0;
  }
</style>

<ul class="social-icons">
  {%- if settings.social_twitter != blank -%}
    <li>
      <a
        href="{{ settings.social_twitter }}"
        class="social-icon flex-row"
        aria-label="social-icon-twitter"
      >
        {%- render 'icon-twitter' -%}
      </a>
    </li>
  {%- endif -%}
  {%- if settings.social_facebook != blank -%}

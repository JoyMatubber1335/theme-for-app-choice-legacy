      <a
        href="{{ settings.social_instagram }}"
        class="social-icon flex-row"
        aria-label="social-icon-instagram"
      >
        {%- render 'icon-instagram' -%}
      </a>
    </li>
  {%- endif -%}

  {%- if settings.social_youtube != blank -%}
